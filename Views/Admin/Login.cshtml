@{
    ViewData["Title"] = "Sign In";
    @model LoginModel;
}

<div class="text-center my-auto">
    <div class="container-fluid col-lg-4 col-6">
        <h1 class="display-6"><b>Sign in</b></h1>
        <br />
        <div class="alert alert-danger" style="@(@ViewBag.ErrorMessage == null? "display:none": "display:block")">
            <p>@ViewBag.ErrorMessage</p>
        </div>
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
    <form>
        <div class="form-group">
            <input class="form-control" placeholder="Username" name="userName" id="userName">
        </div>
        <br />
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" name="pwdHash" id="pwdHash">
        </div>
        <br />
        <div class="form-group">
            <input id="cbRmbMe" type="checkbox"/>
            <label for="cbRmbMe">Remember me</label>
        </div>
        <div class="form-group">
            <input type="checkbox" onclick="showPassword()" />
            <label>Show Password</label>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-success col-12">Login</button>
        </div>
        <br />
        <div class="form-group">
            <a style="text-decoration:none;color:#212529" asp-area="" asp-controller="Admin" asp-action="ForgetPassword">I forgot my password</a>
        </div>
        <br />
        <div class="form-group">
            <label for="newacc">Don't have an account?</label>&nbsp;<a style="text-decoration:none;color:#2E77AE;" asp-area="" asp-controller="Admin" asp-action="CreateNewAccount">Create account</a>
        </div>
    </form>
        }
    </div>
</div>
<script type="text/javascript">
    function showPassword() {
        var x = document.getElementById("pwdHash");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>