@using Microsoft.AspNetCore.Http;
@{
    var currentrole = string.IsNullOrWhiteSpace(Context.Session.GetString("Role"))? 0: int.Parse(Context.Session.GetString("Role"));

    switch (currentrole)
    {
        case 0://public
            Layout = "_Layout";
            break;
        case 1://admin
            Layout = "_AdminLayout";
            break;
        case 2://public
            Layout = "_Layout";
            break;
        case 3://collector
            Layout = "_CollectorLayout";
            break;
        case 4://Donor
            Layout = "_DonorLayout";
            break;

    }
}
